{
  "name": "blockparty",
  "version": "0.1.0",
  "description": "Convention-based web components with optional bridging to native code",
  "type": "module",
  "bin": {
    "blockparty": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && cp src/index.html dist/index.html",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "cli": "npm run build && node ./dist/cli.js",
    "test": "npm run build && node --test dist/**/*.test.js"
  },
  "keywords": [
    "web-components",
    "react",
    "storybook"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0"
  }
}
