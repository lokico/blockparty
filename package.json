{
  "name": "blockparty",
  "version": "0.1.0",
  "description": "Easy, zero-config, convention-based React components.",
  "repository": "github:chkn/blockparty",
  "type": "module",
  "bin": {
    "blockparty": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./discover": {
      "types": "./dist/discoverBlocks.d.ts",
      "import": "./dist/discoverBlocks.js"
    },
    "./storybook": {
      "types": "./dist/storybook.d.ts",
      "import": "./dist/storybook.js"
    },
    "./build": {
      "types": "./dist/build.d.ts",
      "import": "./dist/build.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && rm -rf dist/templates && cp -r src/templates dist/templates",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "cli": "npm run build && node ./dist/cli.js",
    "test": "npm run build && node --test dist/**/*.test.js"
  },
  "keywords": [
    "blocks",
    "react",
    "storybook",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.0"
  }
}
